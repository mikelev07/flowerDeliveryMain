@model FlowersDelivery.Models.ApplicationUser
@{
    ViewBag.Title = "Страница пользователя";
}
<h2>Страница пользователя.</h2>
<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>Список ролей этого пользователя</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>Для этого пользователя нет роли.</p>
}
<table class="table">
    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("К списку пользователей", "Index")
</p>

